<h1>Listing of veterinary doctors</h1>

<table style="width:50%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>School degree</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vat_doctors.each do |vat_doctor| %>
      <tr>
        <td><%= vat_doctor.name %></td>
        <td><%= vat_doctor.address %></td>
        <td><%= vat_doctor.city %></td>
        <td><%= vat_doctor.state %></td>
        <td><%= vat_doctor.zip_code %></td>
        <td><%= vat_doctor.school_degree %></td>
        <td><%= vat_doctor.experience %></td>
        <td><%= link_to 'Show', vat_doctor %></td>
        <td><%= link_to 'Edit', edit_vat_doctor_path(vat_doctor) %></td>
        <td><%= link_to 'Destroy', vat_doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show appoinment', vat_doctor_show_doctors_list_path(vat_doctor.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new doctor details', new_vat_doctor_path %>
