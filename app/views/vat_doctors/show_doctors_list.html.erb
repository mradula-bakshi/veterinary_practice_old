<h1>Appoinment list </h1>
<table style="width:50%">
  <thead>
    <tr>
      <th>Date of Visit</th>
      <th>Pet</th>
      <th>Customer</th>
      <th>Requires Reminder of Appointment</th>
      <th>Reason for Visit</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_appoinments.each do |appoinment_list| %>
      <tr>
        <td><%= appoinment_list.visit_date %></td>
        <td><%= appoinment_list.pet %></td>
        <td><%= appoinment_list.customer %></td>
        <td><%= appoinment_list.reminder_required %></td>
        <td><%= appoinment_list.reason_to_visit %></td>       
      </tr>
    <% end %>
  </tbody>
</table>

<br>


